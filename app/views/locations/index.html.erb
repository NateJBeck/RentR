<div class="top-image-holder">
<h3>Find Your Home away from Home</h3>
  <div class="top-nav-buttons">
    <%= link_to "HOME", root_path %>

    <% if signed_in? %>
      <%= link_to "Create a Listing", new_user_listing_path(current_user) %>
      <%= link_to "My Listings", user_path(current_user) %>
      <%= link_to "Requests", booking_requests_path %>
      <%= link_to "Sign out", session_path, method: :delete %>
    <% else %>
      <%= link_to "Sign in", new_session_path %>
      <%= link_to "Sign up", new_user_path %> 
    <% end %>
  </div>
</div>

<div class="location-container">
  <ul>
    <%= render @locations %>
  </ul>
</div>


